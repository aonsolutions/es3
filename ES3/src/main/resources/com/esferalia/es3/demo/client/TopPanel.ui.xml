<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:es3='urn:import:com.esferalia.es3.demo.client'>

	<ui:image field='logo' src='logo.png' />
	<ui:image field='status' src='status.png' />
	<ui:image field='logout' src='logout.png' />
	<ui:image field='header_bar' src='header_bar.png' />

	<ui:style>
	
	
	    .header {
			width : 100%;
		    border-top: 5px solid #999999;
		    border-bottom: 1px solid #717E88; 
		    font: 12px/1.333 "arial","lucida Grande","Trebuchet MS",sans-serif;
	    }
	    
	    .appName {
		    color: #333333;
		    height: 40px;
		    padding: 2px 10px;
		}
		
		.appInfo {
		    width: 20%;
		    font-size: 0.9em;
		    padding: 5px 10px 2px 40px;
		    text-align: right;
    	}
    	
		.appUser {
			font-weight: bold;
    	}

    	.appVersion {
		    color: #F2F2F2;
		    font-size: 0.9em;
		    font-weight: bold;
		    margin-left: 10px;
		    margin-top: 0.1em;			
		}

		@sprite .appTitle {
			gwt-image: 'logo';
		    background-repeat: no-repeat;
		    background-attachment: scroll;
		    background-position: left 52px;
		    clear: both;
		    color: #9cc66b;
		    display: inline;
		    font-family: tahoma,arial,sans;
		    font-size: 12px;
		    font-weight: bold;
		    height: 100%;
		    margin-left: 150px;
		    padding-left: 88px;
		    padding-top: 66px;
		    text-align: center;
        }

    	@sprite .status {
			gwt-image: 'status';
		    background-color :  #9cc66b;
		    background-repeat: no-repeat;
		    background-attachment: scroll;
		    background-position: left top;
		    height: 37px;
		    left: 25px;
		    position: absolute;
		    top: 5px;
		    width: 114px;
    	}
    	
		@sprite .addInfo {
			gwt-image: 'header_bar';
		    background-color :  #3D3D47;
		    background-repeat: repeat-x;
		    background-attachment: scroll;
		    background-position: left top;
		    color: #F2F2F2;
		    font-size: 0.9em;
		    overflow: auto;
		    padding: 3px 1em 3px 1.5em;
		    width: auto;
		    height: auto;
		}

		
		@sprite .appLogout {
			gwt-image: 'logout';
		    background-color :  trasparent;
		    background-repeat: no-repeat;
		    background-attachment: scroll;
		    background-position: left center;
		    color: #FFFFFF;
		    padding-left: 14px;
    	}
		
	    
	</ui:style>

	<g:HTMLPanel>
		<div id="es3Header" class="{style.header}">
			<table style="border-collapse: collapse;" cellpadding="0" cellspacing="0" width="100%">
				<tbody>
					<tr>
						<td class="{style.appName}">
							<div style="margin-top: 15px">
								<div>
									<div style="display: none" class="aon-outputConnectionStatus-start"></div>
									<div class="{style.status}"></div>
								</div>
								<div style="display: none" class="aon-outputConnectionStatus-failed"></div>
								<span class="{style.appTitle}"> / ES3</span>
							</div>
						</td>
						<td class="{style.appInfo}">
							<div style="border-left:1px solid #ccc;color:#999;">
								<span>esferalia.com</span>
								<span> / </span>
								<span class="{style.appUser}">Raul Trepiana</span>
							</div>
						</td>
					</tr>
				</tbody>
			</table>

			<div class="{style.addInfo}">
				<div style="float: right;" >
					<div class="aon-header-menu-item">
						<a class="{style.appLogout}">
							<span class="aon-logout-text">Desconectar</span>
						</a>
					</div>
				</div>
				<span class="{style.appVersion}">Versi√≥n 7.0-SNAPSHOT</span>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
